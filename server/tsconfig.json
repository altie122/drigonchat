{
  "extends": "ts-node/node16/tsconfig.json",
  "ts-node": {
    "files": true,
    "esm": true,
    "transpileOnly": true
  },
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ESNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": ".",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true
  },
  "exclude": ["node_modules"]
}
